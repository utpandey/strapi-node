{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "name": "employee",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "emp_name": {
      "type": "string",
      "required": true
    },
    "emp_email": {
      "type": "email",
      "required": true
    },
    "emp_contact_no": {
      "type": "biginteger",
      "default": "0",
      "required": true
    },
    "emp_dob": {
      "type": "date",
      "required": true
    },
    "emp_department": {
      "type": "enumeration",
      "enum": [
        "Developer",
        "HR",
        "QA",
        "PM",
        "BA",
        "Designer"
      ],
      "required": true
    },
    "emp_proj": {
      "via": "proj_emps",
      "collection": "project"
    },
    "emp_allocations": {
      "via": "alloc_emp",
      "collection": "allocation"
    },
    "emp_pod": {
      "model": "pod",
      "via": "pod_emp"
    },
    "emp_designation": {
      "type": "string",
      "required": true
    },
    "emp_primary_skill": {
      "type": "string",
      "required": true
    },
    "emp_sec_skill": {
      "type": "string"
    },
    "emp_status": {
      "type": "string",
      "required": true
    },
    "emp_is_lead": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "emp_is_pm": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "emp_experience": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "emp_relevant_experience": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "emp_total_allocation": {
      "type": "integer",
      "default": 0,
      "required": true,
      "max": 100,
      "min": 0
    },
    "emp_capacity": {
      "type": "integer",
      "default": 0,
      "required": false,
      "max": 100,
      "min": 0
    }
  }
}
